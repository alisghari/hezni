<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="329dp"
        android:layout_height="49dp"
        android:drawableStart="@drawable/phonee"
        android:drawablePadding="10dp"
        android:hint="Numéro de téléphone"
        android:inputType="number|phone"
        android:textColor="#A9A9A9"
        android:textColorHighlight="#0FFFFFFF"
        android:textColorLink="#FFFFFF"
        android:textIsSelectable="true"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="334dp"
        android:layout_height="49dp"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="●●●●●●●"
        android:inputType="textPassword"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="300dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="137dp"
        app:srcCompat="@drawable/hezni"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:background="#0FFFFFFF"
        android:text="Mot de passe oubliée?"
        android:textAllCaps="false"
        android:textColor="#A9A9A9"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="370dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logofb"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="459dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logogoogle"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="462dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="408dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/seconnecter"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="566dp" />

</androidx.constraintlayout.widget.ConstraintLayout>